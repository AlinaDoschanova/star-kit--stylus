 @-ms-viewport
   width: device-width
.page
  box-sizing: border-box
  font-size: 10px
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0)
  -ms-overflow-style: scrollbar
  -ms-text-size-adjust: 100%
  min-width: 320px
  min-height: 100%
  &__inner
    min-height: 100vh
    display: flex
    flex-direction: column
    &:before
      content ''
      display block
      sprite($placeholder)
  &__content
    flex-grow: 1
  &__footer-wrapper
    flex-shrink: 0
*,
*:before,
*:after
  box-sizing: inherit
body
  background-color: #fff
  margin: 0
  min-height: 100%
  font-family: $font-family
  font-size: $font-size
  line-height: $line-height
  color: $text-color
[tabindex='-1']:focus
  outline: none !important
[role='button']
  cursor: pointer
// We love Safari
input[type='search']
  -webkit-appearance: textfield
a,
button,
[role='button'],
input,
label,
select,
textarea
  touch-action: manipulation
// We love EDGE! This is a browser!
svg
  a &,
  button &
    pointer-events: none
img
  max-width: 100%
  height: auto
